<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AR_Project" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_secondary</item>
        <item name="colorSecondaryVariant">@color/purple_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="android:buttonStyle">@style/ButtonViewStyle</item>
    </style>

    <style name="AppTextViewStyle" parent= "android:Widget.TextView">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="ButtonViewStyle" parent= "Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="AccentedButtonStyle" parent="MainMenuButtonStyle">
        <item name="android:backgroundTint">@color/accent_color</item>
    </style>

    <style name="ThemeOverlay.AR_Project.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>